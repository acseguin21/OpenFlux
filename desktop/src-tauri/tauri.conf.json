{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "OpenFlux",
  "identifier": "app.openflux.desktop",
  "version": "0.1.0",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "OpenFlux",
        "width": 720,
        "height": 560,
        "minWidth": 400,
        "minHeight": 300,
        "url": "/",
        "decorations": true
      }
    ],
    "withGlobalTauri": true,
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app", "nsis", "deb", "rpm"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": ""
    },
    "windows": {
      "nsis": {
        "installerIcon": "icons/icon.ico"
      }
    },
    "longDescription": "OpenFlux Desktop â€” connect to your OpenFlux backend and use the agent from a native window.",
    "shortDescription": "OpenFlux Desktop app"
  }
}
