{
  "identifier": "default",
  "description": "Main window: core, shell, http for backend connection",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "shell:default",
    {
      "identifier": "http:default",
      "allow": [
        { "url": "http://localhost:*" },
        { "url": "http://127.0.0.1:*" },
        { "url": "https://*" }
      ]
    }
  ]
}
