{
  "name": "opencode-ai-tools",
  "displayName": "OpenCode AI Tools",
  "description": "Core AI capabilities for the OpenCode IDE, including context retrieval and agent orchestration.",
  "version": "0.1.0",
  "publisher": "opencode",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages",
    "AI",
    "Machine Learning"
  ],
  "main": "./dist/extension.js",
  "dependencies": {
    "axios": "^1.6.0",
    "tree-sitter": "^0.21.0",
    "vscode-languageclient": "^9.0.0",
    "eventsource": "^2.0.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "^18.0.0",
    "typescript": "^5.0.0",
    "esbuild": "^0.20.0"
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "contributes": {
    "commands": [
      {
        "command": "opencode.indexCodebase",
        "title": "OpenCode: Index Codebase"
      },
      {
        "command": "opencode.startAgent",
        "title": "OpenCode: Start Autonomous Agent"
      },
      {
        "command": "opencode.searchCodebase",
        "title": "OpenCode: Search Codebase"
      },
      {
        "command": "opencode.showBackendInstructions",
        "title": "OpenCode: Show backend instructions"
      },
      {
        "command": "opencode.showWelcome",
        "title": "OpenCode: Show Welcome"
      },
      {
        "command": "opencode.openDocumentation",
        "title": "OpenCode: Open Documentation"
      },
      {
        "command": "opencode.openComposer",
        "title": "OpenCode: Open Composer"
      }
    ],
    "configuration": {
      "title": "OpenCode",
      "properties": {
        "opencode.apiUrl": {
          "type": "string",
          "default": "http://localhost:8000",
          "description": "URL of the OpenCode API server"
        },
        "opencode.useOllama": {
          "type": "boolean",
          "default": true,
          "description": "Use Ollama for local embeddings and models"
        },
        "opencode.embeddingModel": {
          "type": "string",
          "default": "nomic-embed-text",
          "description": "Ollama model to use for embeddings"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "opencode-explorer",
          "title": "OpenCode AI",
          "icon": "resources/icon.svg"
        }
      ]
    }
  }
}
